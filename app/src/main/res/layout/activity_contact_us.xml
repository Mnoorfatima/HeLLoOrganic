<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".contact_us">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ImageView
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:src="@drawable/app" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/y">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Feel Free to contact us"
            android:textAlignment="center"/>

    </LinearLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/mano1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@+id/fb"
        android:text="Hello0rganic FB"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/txt1"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/wp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="140dp"
        android:src="@drawable/mano2" />
    <TextView
        android:layout_marginTop="160dp"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_toRightOf="@+id/fb"
        android:text="+923110040530"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/txt2"
        android:layout_marginLeft="20dp" />

    <ImageView
        android:id="@+id/insta"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="230dp"
        android:src="@drawable/mano3" />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="250dp"
        android:layout_toRightOf="@+id/fb"
        android:text="HelloOrganic Official"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/txt3"/>>


</RelativeLayout>
</LinearLayout>